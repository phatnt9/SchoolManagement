<Window
    x:Class="SchoolManagement.View.ScanForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SchoolManagement.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Scan"
    Width="250"
    Height="110"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Background="#f1f1f1">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox
                Name="tb_pinno"
                Width="150"
                PreviewKeyDown="Tb_pinno_PreviewKeyDown"
                PreviewTextInput="Tb_pinno_PreviewTextInput" />
            <Label Margin="5" HorizontalContentAlignment="Center">
                Scaning...
            </Label>
        </StackPanel>
    </Grid>
</Window>