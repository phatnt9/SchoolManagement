<Window
    x:Class="SchoolManagement.View.ChangePasswordForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SchoolManagement.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Change Password"
    Width="350"
    Height="200"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel
                    Margin="0,6,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Vertical">
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Label
                            VerticalAlignment="Center"
                            Content="Username"
                            FontSize="12" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Label
                            VerticalAlignment="Center"
                            Content="Password"
                            FontSize="12" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Label
                            VerticalAlignment="Center"
                            Content="New Password"
                            FontSize="12" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Label
                            VerticalAlignment="Center"
                            Content="Confirm New Password"
                            FontSize="12" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel
                    Margin="0,6,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Vertical">
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <TextBox
                            Name="userNametb"
                            Width="130"
                            Margin="5"
                            CharacterCasing="Upper"
                            IsReadOnly="True" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <PasswordBox
                            Name="passwordCurrenttb"
                            Width="130"
                            Margin="5"
                            PreviewKeyDown="PasswordCurrenttb_PreviewKeyDown" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <PasswordBox
                            Name="passwordNewtb"
                            Width="130"
                            Margin="5"
                            PreviewKeyDown="PasswordNewtb_PreviewKeyDown" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <PasswordBox
                            Name="passwordNewConfirmtb"
                            Width="130"
                            Margin="5"
                            PreviewKeyDown="PasswordNewConfirmtb_PreviewKeyDown" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel
                Width="Auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Button
                            Name="btn_save"
                            Width="70"
                            Height="25"
                            Margin="15,0"
                            Padding="5,0"
                            Click="btn_save_Click"
                            Content="Save" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <Button
                            Name="btn_exit"
                            Width="70"
                            Height="25"
                            Margin="15,0"
                            Padding="5,0"
                            Click="btn_exit_Click"
                            Content="Exit" />
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>