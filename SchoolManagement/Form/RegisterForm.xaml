                        <Label Content="Picture:"></Label>
                    </Grid>
                    <Grid Grid.Column="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBox
                                IsEnabled="False"
                                Width="Auto"
                                MinWidth="50"
                                Margin="5 0"
